<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:id="@+id/info"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_profile_comment"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/if_ninja_479478"
                app:border_color="@color/cardview_dark_background"
                app:border_width="2dp" />

            <TextView
                android:id="@+id/tv_user_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/img_profile_comment"
                android:maxLines="3"
                android:text="Dong son"
                android:textAlignment="center"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/info"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_content_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="15dp"
                android:textSize="@dimen/text_article_size" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_created_time_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_gravity="end"
                android:paddingLeft="5dp"
                android:paddingRight="15dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_created_time_article_size" />


        </LinearLayout>



    </RelativeLayout>

</android.support.v7.widget.CardView>


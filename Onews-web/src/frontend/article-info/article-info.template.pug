.article
  header(ng-if='ctrl.article.searchKey')
    h3.title-head {{ctrl.article.category_id.name}}
  .article-left
    a(href="{{ctrl.article.url}}")
      img(src="{{ctrl.article.img}}")
  .article-right
    .article-title
      p
        | {{ctrl.article.created_time_string}}
        a.span_link(href="#")
          span.glyphicon.glyphicon-comment
          | {{ctrl.number_of_comments}}
        a.span_link(href="#")
          span.glyphicon.glyphicon-eye-open
          | 104
        a.span_link(href="#")
          span.glyphicon.glyphicon-thumbs-up
          | 52
      a.title(href="{{ctrl.article.url}}")  {{ctrl.article.title}}
    .article-text
      p
        | {{ctrl.article.content[0]}}
      a(href="{{ctrl.article.url}}")
        img(src="images/more.png", alt="")
      .clearfix
  .clearfix